{
  "$id": "https://graphnode.dev/schemas/graph-summary.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Graph Summary",
  "type": "object",
  "properties": {
    "overview": {
      "type": "object",
      "properties": {
        "total_conversations": { "type": "integer" },
        "time_span": { "type": "string" },
        "primary_interests": { "type": "array", "items": { "type": "string" } },
        "conversation_style": { "type": "string" },
        "most_active_period": { "type": "string" },
        "summary_text": { "type": "string" }
      },
      "required": ["total_conversations", "time_span", "primary_interests", "conversation_style", "most_active_period", "summary_text"]
    },
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cluster_id": { "type": "string" },
          "name": { "type": "string" },
          "size": { "type": "integer" },
          "density": { "type": "number" },
          "centrality": { "type": "number" },
          "recency": { "type": "string" },
          "top_keywords": { "type": "array", "items": { "type": "string" } },
          "key_themes": { "type": "array", "items": { "type": "string" } },
          "common_question_types": { "type": "array", "items": { "type": "string" } },
          "insight_text": { "type": "string" },
          "notable_conversations": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["cluster_id", "name", "size", "density", "centrality", "recency", "top_keywords", "key_themes", "common_question_types", "insight_text", "notable_conversations"]
      }
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pattern_type": { "type": "string" },
          "description": { "type": "string" },
          "evidence": { "type": "array", "items": { "type": "string" } },
          "significance": { "type": "string" }
        },
        "required": ["pattern_type", "description", "evidence", "significance"]
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source_cluster": { "type": "string" },
          "target_cluster": { "type": "string" },
          "connection_strength": { "type": "number" },
          "bridge_keywords": { "type": "array", "items": { "type": "string" } },
          "description": { "type": "string" }
        },
        "required": ["source_cluster", "target_cluster", "connection_strength", "bridge_keywords", "description"]
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "related_nodes": { "type": "array", "items": { "type": "string" } },
          "priority": { "type": "string" }
        },
        "required": ["type", "title", "description", "related_nodes", "priority"]
      }
    },
    "generated_at": { "type": "string" },
    "detail_level": { "type": "string" }
  },
  "required": ["overview", "clusters", "patterns", "connections", "recommendations", "generated_at", "detail_level"]
}
